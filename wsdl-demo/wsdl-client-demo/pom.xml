<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns="http://maven.apache.org/POM/4.0.0"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <artifactId>wsdl-client-demo</artifactId>
  <build>
    <plugins>
      <plugin>
        <artifactId>jaxws-maven-plugin</artifactId>
        <configuration>
          <extension>true</extension>
          <keep>true</keep>
          <resourceDestDir>${basedir}/src/main/java</resourceDestDir>
          <verbose>true</verbose>
          <vmArgs>
            <vmArg>-Djavax.xml.accessExternalSchema=all</vmArg>
          </vmArgs>
          <wsdlDirectory>${basedir}/src/main/wsdl</wsdlDirectory>
        </configuration>
        <executions>
          <execution>
            <configuration>
              <bindingFiles>
                <bindingFile>${basedir}/src/main/binding/binding-hello.xml</bindingFile>
                <bindingFile>${basedir}/src/main/binding/binding-hello-jaxb.xml</bindingFile>
                <bindingFile>${basedir}/src/main/binding/handlerChain-hello.xml</bindingFile>
              </bindingFiles>
              <staleFile>${basedir}/target/generated/emptyfile/hello</staleFile>
              <wsdlFiles>
                <wsdlFile>${basedir}/src/main/wsdl/hello.wsdl</wsdlFile>
              </wsdlFiles>
              <wsdlLocation>wsdl/hello.wsdl</wsdlLocation>
            </configuration>
            <goals>
              <goal>wsimport</goal>
            </goals>
            <id>hello-wsdl</id>
            <phase>generate-sources</phase>
          </execution>
        </executions>
        <groupId>org.codehaus.mojo</groupId>
      </plugin>
      <plugin>
        <artifactId>maven-resources-plugin</artifactId>
        <executions>
          <execution>
            <configuration>
              <outputDirectory>${basedir}/target/classes</outputDirectory>
              <resources>
                <resource>
                  <directory>${basedir}/src/main/</directory>
                  <includes>
                    <include>wsdl/*.*</include>
                  </includes>
                </resource>
              </resources>
            </configuration>
            <goals>
              <goal>copy-resources</goal>
            </goals>
            <phase>generate-sources</phase>
          </execution>
        </executions>
        <groupId>org.apache.maven.plugins</groupId>
      </plugin>
      <plugin>
        <artifactId>exec-maven-plugin</artifactId>
        <configuration>
          <mainClass>huaminglin.demo.wsdl.client.HelloClientDemo</mainClass>
        </configuration>
        <groupId>org.codehaus.mojo</groupId>
        <version>1.6.0</version>
      </plugin>
    </plugins>
  </build>
  <dependencies>
    <dependency>
      <artifactId>jaxws-rt</artifactId>
      <groupId>com.sun.xml.ws</groupId>
      <version>2.1.4</version>
    </dependency>
  </dependencies>
  <modelVersion>4.0.0</modelVersion>
  <packaging>jar</packaging>
  <parent>
    <artifactId>wsdl-demo</artifactId>
    <groupId>huaminglin.demo</groupId>
    <version>1.0-SNAPSHOT</version>
  </parent>
</project>
